<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="assetic.filter.compass_connector.class">Glorpen\CompassConnectorBundle\Filter\CompassConnectorFilter</parameter>
        <parameter key="assetic.filter.compass_connector.plugins" type="collection" />
        <parameter key="assetic.filter.compass_connector.cache_path">%kernel.root_dir%/cache/compassConnector</parameter>
        <parameter key="assetic.filter.compass_connector.compass_bin">/home/arkus/.gem/ruby/1.9.1/bin/compass</parameter>
        <parameter key="assetic.filter.compass_connector.connector_class">Glorpen\CompassConnectorBundle\Connector\Symfony2Connector</parameter>
        <parameter key="assetic.filter.compass_connector.vendors.path">%kernel.root_dir%/../web/vendors</parameter>
        <parameter key="assetic.filter.compass_connector.vendors.web">/vendors</parameter>
        <parameter key="assetic.filter.compass_connector.generated_images.path">%kernel.root_dir%/../web/assetic/generated-images</parameter>
        <parameter key="assetic.filter.compass_connector.generated_images.web">/assetic/generated-images</parameter>
        
        <parameter key="assetic.filter.compass_connector.environment">development</parameter>
        <parameter key="assetic.filter.compass_connector.sass_root">%kernel.root_dir%/../</parameter>
    </parameters>

    <services>
        <service id="assetic.filter.compass_connector" class="%assetic.filter.compass_connector.class%">
            <tag name="assetic.filter" alias="compass_connector" />
            <argument>%assetic.filter.compass_connector.cache_path%</argument>
            <argument>%assetic.filter.compass_connector.compass_bin%</argument>
            <argument>%assetic.filter.compass_connector.connector_class%</argument>
            <call method="setPlugins"><argument>%assetic.filter.compass_connector.plugins%</argument></call>
            <call method="setGeneratedImagesPath"><argument>%assetic.filter.compass_connector.generated_images.path%</argument></call>
            <call method="setGeneratedImagesWeb"><argument>%assetic.filter.compass_connector.generated_images.web%</argument></call>
            <call method="setEnvironment"><argument>%assetic.filter.compass_connector.environment%</argument></call>
            <call method="setVendorsPath"><argument>%assetic.filter.compass_connector.vendors.path%</argument></call>
            <call method="setVendorsWeb"><argument>%assetic.filter.compass_connector.vendors.web%</argument></call>
            <call method="setSassRoot"><argument>%assetic.filter.compass_connector.sass_root%</argument></call>
            <call method="enableAsseticMtimeFix"><argument>true</argument></call>
        </service>
    </services>
</container>
